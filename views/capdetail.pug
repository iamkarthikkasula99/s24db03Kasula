extends layout
block content
    h1= title
    if (toShow == null)
    h2 No instance to update
  else
    - let cap_id = toShow._id
    - let cap_type = toShow.cap_type
    - let cap_size = toShow.cap_size
    - let cap_cost = toShow.cap_cost
    div
        div.row
            div(class='capAttr mr-3') cap ID is:
            div #{cap_id}
        div.row
            div(class='capAttr mr-3') cap_type is:
            div #{cap_type}
        div.row
            div(class='capAttr mr-3') cap_size is:
            div #{cap_size}
        div.row
            div(class='capAttr mr-3') cap_cost is:
            div #{cap_cost}
