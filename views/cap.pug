extends layout

block content
  h1= title
 
  div.container-fluid
    div.row
      - let cap = results
      each cap, index in cap
        .col-sm-2(onclick=`buy(${index})`)
        
          p Cap Type: #{cap.cap_type}
          p Size: #{cap.cap_size}
          p Price: $#{cap.cap_price.toFixed(2)}

  a(href="/") Back to index

  script.
    function buy(index) {
        alert(`You purchased item ${index}`);
    }



